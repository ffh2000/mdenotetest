<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:background="@drawable/currency_row_background"
        >

        <TextView
            android:id="@+id/currency_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:freezesText="false"
            android:textColor="@color/colorCurrencyName"
            android:text="currency_name" />

        <TextView
            android:id="@+id/currency_volume"
            android:textAlignment="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/currency_name"
            android:freezesText="false"
            android:textColor="@color/colorCurrencyVolume"
            android:text="currency_volume" />

        <TextView
            android:id="@+id/currency_price_amount"
            android:textAlignment="textEnd"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_toRightOf="@+id/currency_volume"
            android:textColor="@color/colorCurrencyAmount"
            android:freezesText="false"
            android:text="amount" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>